<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
    PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
    "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="productOrgMapping">

	<parameterMap id="productOrgMapping" type="com.sw.plugins.product.manage.entity.ProductOrgMapping" />

	
	<resultMap id="productOrgMappingResult" type="com.sw.plugins.product.manage.entity.ProductOrgMapping">
		<result property="productID" column="ProductID" />
		<result property="orgID" column="OrgID" />
	</resultMap>
	
	<select id="select_orgids_byproduct" parameterMap="productOrgMapping" resultType="long">
		select OrgID from PM_ProductOrgMapping where ProductID = ${productID}
	</select>
	
	<!-- 新增 -->
	<insert id="insert_product_orgmapping" parameterMap="productOrgMapping">
		insert into PM_ProductOrgMapping
		<trim prefix="(" prefixOverrides="," suffix=")">
			<if test=" productID !=null ">,ProductID</if>
			<if test=" orgID !=null ">,OrgID</if>
			<if test=" type !=null ">,Type</if>
		</trim>
		values
		<trim prefix="(" prefixOverrides="," suffix=")">
			<if test=" productID !=null ">,${productID}</if>
			<if test=" orgID !=null ">,${orgID}</if>
			<if test=" type !=null ">,${type}</if>
		</trim>
	</insert>
	
	<!-- 删除 -->
	<delete id="delete_product_orgmapping" parameterMap="productOrgMapping">
		delete from PM_ProductOrgMapping Where ProductID=${productID}
	</delete>
</mapper>
